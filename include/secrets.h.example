const char *WIFI_SSIDS[NUM_WIFI_NETWORKS] = {
    "Your_WiFi_SSID_1",   // Network 1 SSID
    "Your_WiFi_SSID_2", // Network 2 SSID
    ""     // Network 3 SSID
};

const char *WIFI_PASSWORDS[NUM_WIFI_NETWORKS] = {
    "Your_WiFi_Password_1", // Network 1 Password
    "Your_WiFi_Password_2", // Network 2 Password
    ""           // Network 3 Password
};

// -- Nightscout Settings --
// Your Nightscout URL, without a trailing slash. E.g., "https://your-nightscout-site.herokuapp.com"
const char *NIGHTSCOUT_URL = "https://your-nightscout-site.herokuapp.com";

// -- Nightscout API Token --
// A read-only token is recommended. Create one in your Nightscout admin panel.
// If your site is public, you can leave this as an empty string "".
